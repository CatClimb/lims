<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.modules.dao.DevLendDao">
    <resultMap id="DevLendResultMap" type="devLendEntity">
<id property="id" column="id"></id>
<result property="devUStatus" column="dev_u_status"></result>
<result property="userName" column="user_name"></result>
<result property="deviceSTime" column="device_s_time"></result>
<result property="deviceETime" column="device_e_time"></result>
<result property="devReason" column="dev_reason"></result>
    </resultMap>

    <insert id="insert">
        INSERT dev_lend(id,dev_u_status,user_name, device_s_time,device_e_time,dev_reason) VALUES(#{id},#{devUStatus},#{userName},#{deviceSTime},#{deviceETime},#{devReason})
    </insert>

    <update id="update">
        UPDATE dev_lend
    SET dev_u_status=#{devUStatus},user_name=#{userName},device_s_time=#{deviceSTime},device_e_time=#{deviceETime},dev_reason=#{devReason}
    WHERE id=#{id}
    </update>

    <select id="conditionalQuery" resultMap="DevLendResultMap">
        SELECT *
        FROM dev_lend
        WHERE

            dev_u_status LIKE CONCAT('%',#{devUStatus},'%')
           OR user_name LIKE CONCAT('%',#{userName},'%')
           OR dev_reason LIKE CONCAT('%',#{devReason},'%')

        ORDER BY id ASC
            LIMIT #{start},#{pageSize}
    </select>

    <delete id="deleteById">
        DELETE FROM dev_lend
        WHERE id=#{id}
    </delete>

    <select id="conditionalQueryCount" resultType="int">
        SELECT COUNT(*)
        FROM (SELECT *
              FROM dev_lend
              WHERE
                 
                  dev_u_status LIKE CONCAT('%',#{devUStatus},'%')
                 OR user_name LIKE CONCAT('%',#{userName},'%')
                 OR dev_reason LIKE CONCAT('%',#{devReason},'%')

              ORDER BY id ASC
             ) tmp
    </select>
</mapper>
